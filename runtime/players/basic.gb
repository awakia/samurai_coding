func outOfField(p)
  local x y
  x = p[0]
  y = p[1]
  if (x < 0) | (x >= width) | ((x >= width - 1) & ((y & 1) == 0))
    return 1
  endif
  if (y < 0) | (y >= height)
    return 1
  endif
  return 0
endfunc

func randomMove()
  if gb_agent_status(team, agnt)
    return -1
  else
    return gb_random_value(6)
  endif
endfunc

func min(a, b)
  if a < b
    return a
  else
    return b
  endif
endfunc

func abs(a)
  if a < 0
    return -1 * a
  else
    return a
  endif
endfunc

func mindist(p, q)
  local dx dy dz
  dx = p[0] - q[0]
  dy = p[1] - q[1]
  dz = abs(dx+dy)
  dx = abs(dx)
  dy = abs(dy)
  return min(dx+dy, min(dx+dz, dy+dz))
endfunc

func neighbor(p, k)
  local x y ret offset
  x = p[0]
  y = p[1]
  if (y&1) == 0
    offset = 0
  else
    offset = -1
  endif
  if k == 0
    ret[0] = x + offset
    ret[1] = y - 1
  elif k == 1
    ret[0] = x + 1 + offset
    ret[1] = y - 1
  elif k == 2
    ret[0] = x + 1
    ret[1] = y
  elif k == 3
    ret[0] = x + 1 + offset
    ret[1] = y + 1
  elif k == 4
    ret[0] = x + offset
    ret[1] = y + 1
  elif k == 5
    ret[0] = x - 1
    ret[1] = y
  endif
  return ret
endfunc

func isTaboo(agnt, dest)
  local k
  k = 0
  while k < numTaboos
    if (taboos[k][0] == dest[0]) & (taboos[k][1] == dest[1])
      return 1
    endif
    k = k + 1
  endwhile
  return 0
endfunc

func atGate(pos)
  local k
  k = 0
  while k != $gates
    if gates[k][0] == pos[0] & gates[k][1] == pos[1]
      return 1
    endif
    k = k + 1
  endwhile
  return 0
endfunc

func decideMove(agnt)
  local current k cont dest gates atgate
  if (gb_agent_status(team, agnt))
    return -1
  endif
  current = pos[team][agnt]
  atgate = atGate(current)
  rand = gb_random_value(6)
  k = 0
  cont = 1
  while cont
    dest = neighbor(current, (rand+k)%6)
    if (atgate | outOfField(dest) == 0) & (gb_hexel_owner(dest[0], dest[1]) != team) & (isTaboo(agnt, dest) == 0)
      cont = 0
      taboos[numTaboos] = dest
      numTaboos = numTaboos + 1
      return (rand+k)%6
    else
      k = k+1
      if k == 6
        cont = 0
      endif
    endif
  endwhile
  return randomMove()
endfunc

team = gb_team_id()
size = gb_field_size()
width = size[0]
height = size[1]
gates = gb_gate_positions()
pos = gb_agent_positions()
numTaboos = 0
moves[0] = randomMove()
moves[1] = decideMove(1)
moves[2] = decideMove(2)
moves[3] = decideMove(3)
gb_move(moves)

